<Page x:Class="MasterFloor.Pages.AddEditPartner"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterFloor.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPartner">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="1">
            <TextBlock Text="Название:"/>
            <TextBox Name="tbTitle" Text="{Binding title}"/>

            <TextBlock Text="Тип партнера:"/>
            <ComboBox Name="cbType" SelectedValue="{Binding type}" SelectedValuePath="id" DisplayMemberPath="title"/>

            <TextBlock Text="Директор:"/>
            <TextBox Name="tbDirector" Text="{Binding director}"/>

            <TextBlock Text="Email:"/>
            <TextBox Name="tbEmail" Text="{Binding email}"/>

            <TextBlock Text="Номер телефона:"/>
            <TextBox Name="tbPhone" Text="{Binding phone}"/>

            <TextBlock Text="Юридический адрес:"/>
            <TextBox Name="tbLegalAddress" Text="{Binding legal_address}"/>

            <TextBlock Text="ИНН:"/>
            <TextBox Name="tbInn" Text="{Binding inn}"/>

            <TextBlock Text="Рейтинг:"/>
            <TextBox Name="tbRating" Text="{Binding rating}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnDelete" Content="Удалить" Click="btnDelete_Click" Visibility="Collapsed" Margin="10"/>
                <Button x:Name="btnSave" Content="Сохранить" Click="btnSave_Click" Margin="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
