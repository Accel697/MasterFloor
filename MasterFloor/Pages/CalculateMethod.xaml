<Page x:Class="MasterFloor.Pages.CalculateMethod"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterFloor.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CalculateMethod">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1">
            <TextBlock Text="Продукт:"/>
            <ComboBox Name="cbProduct" SelectedValuePath="id" DisplayMemberPath="title"/>

            <TextBlock Text="Материал:"/>
            <ComboBox Name="cbMaterial"  SelectedValuePath="id" DisplayMemberPath="title"/>
            
            <TextBlock Text="Количество:"/>
            <TextBox Name="tbQuantity"/>

            <TextBlock Name="tblResult"/>

            <Button x:Name="btnCalculate" Content="Посчитать" Click="btnCalculate_Click"/>
        </StackPanel>
    </Grid>
</Page>
